{
  "angularCompilerOptions": {
    "entryModule": "./src/ts/app/app.module#AppModule",
    "skipMetadataEmit": true
  },
  "compilerOptions": {
    "baseUrl": "../../node_modules",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "@lib/core": [
        "../packages/core/src/index"
      ]
    },
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
